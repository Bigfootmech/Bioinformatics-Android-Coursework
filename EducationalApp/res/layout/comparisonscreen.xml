<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="50" 
    android:background="@drawable/background">>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequence Comparison"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#193a59"
	    android:shadowColor="#c6ced6"
  
         />
     <TextView  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Sequence 1"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#193a59"
	    android:shadowColor="#c6ced6"
	    android:shadowRadius="1.5" 
	    android:shadowDx="1"  
	    android:shadowDy="1" />
	    

    <EditText
        android:id="@+id/Sequence1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input a sequence" >

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Sequence 2"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#193a59"
	    android:shadowColor="#c6ced6"
	    android:shadowRadius="1.5" 
	    android:shadowDx="1"  
	    android:shadowDy="1" />  />


    <EditText
        android:id="@+id/Sequence2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input a sequence"
        /> 
 
  <CheckBox
        android:id="@+id/cRNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#c6ced6"
        android:paddingRight="5dp"
        android:text="RNA" />


     <CheckBox
        android:id="@+id/cDNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#c6ced6"
        android:paddingRight="5dp"
        android:text="DNA" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/BLOSUM_prompt" />

	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:orientation="vertical"
	    android:paddingTop="10dp" />

	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="25dp"
	    android:id="@+id/res"
	    android:text="result: " />
		
	<Button
	    android:id="@+id/bCompare"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_gravity="center"
	    android:text="Compare" 
	    android:background="@drawable/mybutton_background"/>
	
	<TextView
       	android:id="@+id/tvResults"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:textSize="40dp"
      	android:gravity="center"
       	android:text="" />

	<TextView
	    android:id="@+id/tvSeq1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="Seq1"
	    android:textSize="25dp" />

	<TextView 
    	android:id="@+id/tvScore"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:textSize="25dp"
      	android:gravity="center"
       	android:text="Score1"/>

	<TextView
	    android:id="@+id/tvSeq2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="Seq2"
	    android:textSize="25dp" />
	

    <Button
        android:id="@+id/bleft"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Left" 
        android:background="@drawable/mybutton_background"/>

    <Button
        android:id="@+id/bright"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Right" 
        android:background="@drawable/mybutton_background"/>

	</LinearLayout>