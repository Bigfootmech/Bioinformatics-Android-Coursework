<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#c6ced6"
        android:padding="10dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Sequence Comparison"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="fill_parent"
       android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#c6ced6"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Sequence 1"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Sequence1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input a sequence" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#c6ced6"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Sequence 2"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Sequence2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Input a sequence" />

    <LinearLayout
        android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cDNA"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNA"
            android:textColor="#2b2b2b" />

        <CheckBox
            android:id="@+id/cRNA"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RNA"
            android:textColor="#2b2b2b" />
           

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:prompt="@string/BLOSUM_prompt" />
 		</LinearLayout>

        <TextView
            android:id="@+id/res"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:gravity="left"
            android:text="result: "
            android:textSize="20dp" 
            android:textColor="#000000"/>

        <Button
            android:id="@+id/bCompare"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton_background"
            android:gravity="center"
            android:text="Compare" 
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:textColor="#2b2b2b"  />

        <TextView
            android:id="@+id/tvSeq1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Seq1"
            android:textSize="20dp" 
            android:textColor="#2b2b2b" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Score1"
            android:textSize="20dp"
            android:textColor="#2b2b2b"   />

        <TextView
            android:id="@+id/tvSeq2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Seq2"
            android:textSize="20dp"
            android:textColor="#2b2b2b"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bleft"
            android:layout_width="73dp"
            android:layout_height="48dp"
            android:background="@drawable/leftarrow"
            android:gravity="center"
            android:text="Left" />

        <Button
            android:id="@+id/bright"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:background="@drawable/rightarrow"
            android:gravity="center"
            android:text="Right" />

	</LinearLayout>

</LinearLayout>